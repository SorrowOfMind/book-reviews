<h1>Reviews</h1>
<div class="row">
    {{#each reviews}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- to do --}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate review 35)}}</p>
                    <span class="blue lighten-3 score">{{score}}</span>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/reviews/user/{{uer_id}}">{{user.dispalyName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/reviews/{{_id}}" class="btn grey">Read more...</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No reviews to display</p>
    {{/each}}
</div>